[t:template,n:base_phrak]
{
	category_name = "1W_evil_d";
	doc = "phrak";
	specializes = actor_evil;
	[actor]
	{
		[skills]
		{
			strength =  1, 0;
			intelligence =  1, 0;
			dexterity =  10, 0;
		}
	}
	[aspect]
	{
		experience_value = 3;
		life = 6;
        max_life = 6;
        mana = 2;
		max_mana = 2;
		model = m_c_edm_st_pos_1;
		scale_base = 0.55;
		textures:0 = b_c_edm_ph;
        [voice]
		{
			[die]			{ priority = high; * = s_e_die_phrak; }
			[enemy_spotted]	{ priority = high; * = s_e_call_phrak_SED; }
			[hit_critical]	{ priority = low; * = s_e_hit_phrak_SED; }
			[hit_glance]	{ priority = low; * = s_e_hit_phrak_SED; }
			[hit_solid]		{ priority = low; * = s_e_hit_phrak_SED; }
		}
	}
	[attack]
	{
		attack_range = 0.5;
		damage_max = 6;
		damage_min = 4;
	}
	[body]
	{
		min_move_velocity = 2.5;
		avg_move_velocity = 4.000000;
		[bone_translator]
		{
			body_anterior = bone01;
			body_mid = bone01;
			body_posterior = bone01;
			kill_bone = bone01;
			shield_bone = bone01;
			weapon_bone = bone01;
		}
		[chore_dictionary]
		{
			chore_prefix = a_c_edm_st_fs;
			[chore_attack]
			{
				chore_stances = 0;
				skrit = select_attack;
				[anim_files]
				{
					00 = at;
					01 = at-02;
				}
			}
			[chore_magic]
			{
				chore_stances = 0;
				skrit = select_attack;
				[anim_files]
				{
					00 = at-02;
				}
			}
			[chore_default]
			{
				chore_stances = 0;
				skrit = infinite_loop;
				[anim_files] { 00=dfs; }
			}
			[chore_die]
			{
				chore_stances = 0;
				skrit = select_transition;
				[anim_files] { 00=di; }
			}
			[chore_fidget]
			{
				chore_stances = 0;
				skrit = select_fidget;
				[anim_files] { 00=dff; }
			}
			[chore_walk]
			{
				chore_stances = 0;
				skrit = select_walk;
				[anim_files] { 00=fl; }
			}
		}
	}
	[common] { screen_name="Phrak"; }
	[defend]
	{
		  defense = 1;
	}

	[mind]
	{
		jat_fidget	= world\ai\jobs\common\job_fidget.skrit
			?meander	= true
			&still		= false;

		melee_engage_range = 14;
		personal_space_range = 0.4;
		ranged_engage_range = 14.0;
		sight_range = 14.0;
	}
	[physics]
	{
		break_effect = blood_mist;
		explode_when_killed = true;
		break_sound = s_e_meat_explosion;
		[break_particulate]
		{
			frag_glb_phrak_01 = 1;
			frag_glb_phrak_02 = 2;
			frag_glb_phrak_03 = 2;
			frag_glb_phrak_04 = 1;
			frag_glb_phrak_05 = 2;
		}
	}
}

